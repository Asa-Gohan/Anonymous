<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="post"
            type="personal.wuqing.anonymous.Post" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:clickable="true"
        android:clipChildren="false"
        android:descendantFocusability="blocksDescendants"
        android:elevation="0dp"
        android:focusable="true"
        android:transitionName="post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:transitionName="avatar"
                        app:srcCompat="@drawable/ic_account_circle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipChildren="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{post.id()}"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:transitionName="id" />

                            <TextView
                                android:id="@+id/dot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:text="\u2022"
                                android:transitionName="dot" />

                            <TextView
                                android:id="@+id/update"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{post.update}"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:transitionName="update" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="0.8"
                            android:text="@{post.title}"
                            android:textAppearance="?attr/textAppearanceSubtitle2"
                            android:textStyle="bold"
                            android:transitionName="title" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favour_button"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:transitionName="favour"
                    app:icon="@drawable/ic_star_rate_outlined"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:postFavour="@{post}"
                    app:rippleColor="?attr/colorControlHighlight" />
            </LinearLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:autoLink="web|email|none"
                android:maxLines="5"
                android:text="@{post.content}"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorPrimary"
                android:transitionName="content" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal"
                android:transitionName="buttons">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/like_button"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:text="@{post.likeCount()}"
                    android:textAlignment="textStart"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12sp"
                    android:transitionName="like"
                    app:icon="@drawable/ic_thumb_up_outlined"
                    app:iconSize="16dp"
                    app:postLike="@{post}"
                    app:rippleColor="?attr/colorControlHighlight" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reply_button"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:text="@{post.replyCount()}"
                    android:textAlignment="textStart"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12sp"
                    android:transitionName="reply"
                    app:icon="@drawable/ic_textmsm_outlined"
                    app:iconSize="16dp"
                    app:iconTint="?android:attr/textColorSecondary"
                    app:rippleColor="?attr/colorControlHighlight" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/read_button"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="@{post.readCount()}"
                    android:textAlignment="textEnd"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12sp"
                    android:transitionName="read"
                    app:icon="@drawable/ic_remove_red_eye"
                    app:iconGravity="end"
                    app:iconSize="16dp"
                    app:iconTint="?android:attr/textColorSecondary"
                    app:rippleColor="?attr/colorControlHighlight" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>