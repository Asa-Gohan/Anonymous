<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="post"
            type="personal.wuqing.anonymous.Post" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        android:clickable="true"
        android:clipChildren="false"
        android:descendantFocusability="blocksDescendants"
        android:elevation="0dp"
        android:focusable="true"
        android:transitionName="post"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:textMagic="@{post}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_circle"
                android:backgroundTint="@{post.avatar}"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="@{post.avatarC()}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{post.titleWithLink()}"
                            android:textAppearance="?attr/textAppearanceSubtitle2"
                            android:textStyle="bold"
                            android:transitionName="title" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginTop="4dp"
                            android:clipChildren="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{post.id()}"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:transitionName="id" />

                            <TextView
                                android:id="@+id/dot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="0dp"
                                android:text="\u2022"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:transitionName="dot" />

                            <TextView
                                android:id="@+id/update"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{post.update}"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="?android:attr/textColorSecondary"
                                android:transitionName="update" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/menu"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="8dp"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_more_vert"
                        app:iconPadding="0dp"
                        app:iconTint="@{post.menuIconTint(context)}"
                        app:rippleColor="?attr/colorControlHighlight" />
                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:maxLines="@{post.contentMaxLines()}"
                    android:text="@{post.contentWithLink()}"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorPrimary"
                    android:transitionName="content" />

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal"
                    android:transitionName="buttons">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/like_button"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dp"
                        android:text="@{post.likeCount()}"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"
                        android:transitionName="like"
                        app:icon="@{post.likeIcon(context)}"
                        app:iconSize="16dp"
                        app:iconTint="@{post.likeIconTint(context)}"
                        app:rippleColor="?attr/colorControlHighlight" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/reply_button"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dp"
                        android:text="@{post.replyCount()}"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"
                        android:transitionName="reply"
                        app:icon="@drawable/ic_textmsm_outlined"
                        app:iconSize="16dp"
                        app:iconTint="@{post.replyIconTint(context)}"
                        app:rippleColor="?attr/colorControlHighlight" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/favour_button"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:transitionName="favour"
                        app:icon="@{post.favorIcon(context)}"
                        app:iconPadding="0dp"
                        app:iconSize="16dp"
                        app:iconTint="@{post.favorIconTint(context)}"
                        app:rippleColor="?attr/colorControlHighlight" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/read_button"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@{post.readCount()}"
                        android:textAlignment="textEnd"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"
                        android:transitionName="read"
                        app:icon="@drawable/ic_remove_red_eye"
                        app:iconGravity="end"
                        app:iconSize="16dp"
                        app:iconTint="@{post.readIconTint(context)}"
                        app:rippleColor="?attr/colorControlHighlight" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>