<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anonymous" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="actionBarStyle">@style/ActionBarColorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">#999</item>
        <item name="cardListBackground">#262626</item>
    </style>

    <style name="Theme.Anonymous.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="ActionBarColorPrimary" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
</resources>