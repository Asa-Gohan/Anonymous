<resources>
    <!-- Base application theme. -->
    <style name="Theme.Anonymous" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#299ee3</item>
        <item name="colorPrimaryVariant">#0070b1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="appBarLayoutStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!--        <item name="android:listPreferredItemHeightSmall">42dp</item>-->
        <item name="cardListBackground">#eee</item>
        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface
        </item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.Anonymous.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/Widget.AppCompat.PopupMenu.Overflow</item>
    </style>

    <style name="Theme.Anonymous.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Anonymous.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Anonymous.PopupMenu.Overlap" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="FloatingActionButtonSurface" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorSurface</item>
        <item name="rippleColor">?colorOnSurface</item>
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="OverlayToolbarStyleSurface">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="fabStyle">@style/FloatingActionButtonSurface</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="appBarLayoutStyle">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
    </style>

    <style name="OverlayToolbarStylePrimary">
        <item name="android:statusBarColor">?colorPrimarySurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="fabStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="appBarLayoutStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="OverlayColorDefault">
        <item name="colorPrimary">#299ee3</item>
        <item name="colorPrimaryVariant">#0070b1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="OverlayColorPurple">
        <item name="colorPrimary">#5c6bc0</item>
        <item name="colorPrimaryVariant">#26418f</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#dda5ad</item>
        <item name="colorSecondaryVariant">#aa767e</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="OverlayColorGreen">
        <item name="colorPrimary">#4db6ac</item>
        <item name="colorPrimaryVariant">#00867d</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#e27866</item>
        <item name="colorSecondaryVariant">#ac4a3b</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="OverlayColorRed">
        <item name="colorPrimary">#f44336</item>
        <item name="colorPrimaryVariant">#ba000d</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#db615b</item>
        <item name="colorSecondaryVariant">#a53131</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="OverlayColorOrange">
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryVariant">#c66900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#db7d98</item>
        <item name="colorSecondaryVariant">#a74e6a</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="OverlayColorBrown">
        <item name="colorPrimary">#8d6e63</item>
        <item name="colorPrimaryVariant">#5f4339</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#3b4b77</item>
        <item name="colorSecondaryVariant">#0a244b</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="OverlayColorWhite">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryVariant">#ffffff</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#009688</item>
        <item name="colorSecondaryVariant">#00675b</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
</resources>